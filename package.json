  "bugs": {
    "url": "https://github.com/pmagalhaesa/boas-praticas-css/issues"
  },
  "homepage": "https://github.com/pmagalhaesa/boas-praticas-css#readme",
  "devDependencies": {
    "gulp": "^3.9.1",
    "gulp-less": "^4.0.0",
    "gulp-sass": "^4.0.1",
    "gulp-stylus": "^2.7.0"
  }
}
